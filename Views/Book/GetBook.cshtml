@model BookStore.Models.BookModel;

<div class="container">
    <hr />
    <div class="row">
        <div class="col-md-6">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    @for (int i = 0; i < Model.GalleryUrl.Count(); i++) {
                        <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="@(i==0 ? "active" : "")"></li>
                    }   
                </ol>
                <div class="carousel-inner">
                    @for (int i = 0; i < Model.GalleryUrl.Count(); i++)
                    {
                    <div class="@(i == 0 ? "carousel-item active" : "carousel-item") ">
                        <img class="d-block w-100" src="@Model.GalleryUrl[i].Url" alt="@Model.GalleryUrl[i].Name">
                    </div>
                    }
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <h3 class="display-4">@Model.Title</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    By <span class="monospaced text-primary">@Model.Author</span>
                </div>
            </div>
            <hr/>
            <div class="row">
                <div class="col-md-12">
                    <p class="description">
                        @Model.Description
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <button class="btn btn-outline-primary">
                        Read Now
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
